{
    "manifest_version": 3,
    "name": "Sidebar Notepad",
    "version": "1.0",
    "description": "A simple sidebar notepad for quick notes.",
    "permissions": ["storage", "sidePanel"],
    "action": {
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  